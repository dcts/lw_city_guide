<div class="form">
  <h1 class="form__header">Add a new category</h1>
  <div class="form__main">
    <%= simple_form_for(@category) do |f| %>
      <div class="form__category">
        <%= f.input :name %>
      </div>
      <div class="form__submit-button">
        <%= f.submit class: "button button--primary" %>
      </div>
    <% end %>
  </div>
</div>
