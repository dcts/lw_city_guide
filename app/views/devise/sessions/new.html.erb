<%= content_for(:title, "Log In") %>
<div class="form form--user">
  <h2 class="form__header form__header--primary form__header--center">Log in</h2>
  <div class="form__main">
    <div class="form__button">
      <%= link_to "Log in with Github", user_github_omniauth_authorize_path, class: "button button--primary" %>
    </div>
    <div class="form__link">
      <div class="caret-link">
        <%= show_svg("caret_left.svg") %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      </div>
    </div>
  </div>
</div>
