<div class="cities">
  <div class="cities__header">
    <h1 class="cities__title">Find your favorite <span class="highlight highlight--none">hot spots </span><span class="cities__text-wrap">in <span class="cities__inner-text-wrap">Le Wagon's cities</span></span></h1>
    <%= show_svg("cities_background.svg") %>
  </div>
  <div class="cities__main">
    <div class="cards-grid">
      <% @cities.each do |city| %>
        <%= render partial: "cities/city_card", locals: { city: city} %>
      <% end %>
    </div>
  </div>
</div>
