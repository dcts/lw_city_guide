<% if city.spots.any? %>
  <div class="main-card">
    <%= cl_image_tag city.cover.card, class: "main-card__image" %>
    <div class="main-card__content">
      <p class="main-card__title"><%= city.name %></p>
      <p class="main-card__dub-title"><%= pluralize city.spots.published.size, "spot" %></p>
    </div>
    <%= link_to "", city_spots_path(city), class: "main-card__link" %>
  </div>
<% end %>
