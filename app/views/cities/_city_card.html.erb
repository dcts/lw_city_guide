<% if city.spots.any? %>
  <div class="city-card">
    <%= cl_image_tag city.cover.card, class: "city-card__image" %>
    <div class="city-card__text">
      <p class="city-card__header"><%= city.name %></p>
      <p class="city-card__info"><%= pluralize city.spots.published.size, "spot" %></p>
    </div>
    <%= link_to "", city_spots_path(city), class: "city-card__link" %>
  </div>
<% end %>
